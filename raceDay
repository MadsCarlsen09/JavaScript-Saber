let raceNumber = Math.floor(Math.random() * 1000);
let registeredEarly = false;
let runnerAge = 18;

if (runnerAge > 18 && registeredEarly) {
  raceNumber += 1000
}
if (runnerAge > 18 && registeredEarly) {
  console.log('Runner with racenumber ' + raceNumber + ' will race at 9:30 am.');
}
else if (!registeredEarly && runnerAge > 18){
  console.log(`Race will begin at 11:00 am. Your Race Number is ${raceNumber}`);
}
else if (runnerAge < 18){
  console.log(`Race will begin at 12:30 pm. Your Race Number is ${raceNumber}`);
}
else console.log('Please go to the registration desk.')
